<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/normal_tabs" />

    <com.meepo.design.tabs.NormalTabs
        android:id="@+id/normal_tabs"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:padding="3dp"
        app:layout_iconGravity="TOP"
        app:layout_iconMargin="1dp"
        app:layout_iconHeight="23dp"
        app:layout_iconWidth="23dp"
        app:layout_indicatorGravity="TOP"
        app:layout_indicatorColor="@color/primary_color"
        app:layout_textSelectColor="@color/primary_color"
        app:layout_textSize="10sp"
        app:layout_underlineGravity="TOP"
        app:layout_underlineHeight="1dp" />

</RelativeLayout>
